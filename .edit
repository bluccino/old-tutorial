##!/bin/bash
# .edit: launch editor

   if [ "$*" == "-?" ]; then
      echo 'usage: ./.edit <args>   # launch atom with common project dirs'
      exit 0
   fi

   GITROOT=`gitroot`
   ENVIRONMENT=$GIT/Environment
   BLU=$GITROOT
   LIB=$BLU/lib/V0.3

   cd $GITROOT
   atom $BLU/docs $BLU/samples $BLU/rapid $LIB

# eof
